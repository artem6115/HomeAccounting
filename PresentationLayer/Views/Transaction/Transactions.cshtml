@using BusinessLayer.Services;
@using DataLayer.Entities;
@using DataLayer;
@model Filter
@{
    ViewData["Title"] = "Транзакции";
    List<Account> Accounts = AccountService.GetAll().Result;
    List<Category> Categories = CategoryService.GetAll().Result;
    List<Transaction> Transactions = TransactionService.GetAll().Result;


}
@inject AccountService AccountService
@inject CategoryService CategoryService
@inject TransactionService TransactionService



<script>
    function MoveToolBar (){
        document.getElementById("ToolBar").classList.toggle("ActiveBar");
    }
</script>

<div class="ToolBar" id="ToolBar">
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="col-12">
                <form method="get">
                    <div class="row justify-content-center mt-1">
                        <div class="col-2">
                            <input class="form-control" hidden="hidden" />
                            <select class="form-select">
                                <option class="active" value="">Все счета</option>
                                @foreach (Account item in Accounts)
                                {
                                    <option value=@item.Id>@item.Name</option>
                                }
                                
                            </select>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">₽</span>
                                </div>
                                <input class="form-control" placeholder="Стоимость" />
                            </div>
                         </div>
                        <div class="col-2"><input class="form-control" type="date" placeholder="Дата" /></div>
                        <div class="col-1 mt-1"><a href=""><img src="/images/filtr.png" /></a></div>
                        <div class="col-2 ">
                            <input class="form-control" placeholder="Что искать..." />

                        </div>
                        <div class="col-1 mt-1 ">
                            <a href=""><img src="/images/find.png" /></a>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-2">
                            <select  class="form-select">
                                <option class="active" value="">Все категории</option>

                                @foreach (Category item in Categories)
                                {
                                    <option value=@item.Id>@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-2">
@* 
                            <div class="form-check">
                            <label class="form-label" for="i "style="color:white;">Доход </label>

                            <input type="checkbox" id="i"class="form-check-input" />
                            </div> *@

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <h5  style="color:white;" class="input-grop-text">Доход  </h5>
                                </div>
                                <input type="checkbox" class="form-check-input m-lg-2 mt-2" />
                            </div>
                        </div>
                        <div class="col-6"></div>
                    </div>

                </form>
            </div>
        </nav>
    </div>
    <div class="menuButton">
       <button class="btn" onclick="MoveToolBar()">
           <img asp-append-version=true src="/images/filtrMune.png" width="50px" height="50px"/>
       </button>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <table id="table" class=" table table-striped table-bordered  table-hover" width="100%">
                <thead>
                    <tr>
                        <th>
                            <p>Счет</p>
                        </th>

                        <th>
                            <p> Категория</p>
                        </th>
                        <th>
                            <p> Стоимость</p>
                        </th>
                        <th><p> Описание</p></th>
                        <th>
                            <p> Дата</p>
                        </th>
                        <th colspan="2">
                            Редактирование
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Transaction item in Transactions??new List<Transaction>(0)){
                        <tr>
                            <td>@item.Account.Name</td>
                            <td>@item.Category?.Name</td>
                            <td style="color:@(item.IsIncom?"green":"red")">@item.Value</td>
                            <td>@item.Comment</td>
                            <td>@item.Date</td>
                            <td class="td-edit">
                                <a asp-controller="Transaction" asp-action="EditPage" asp-route-Id=@item.Id><img src="/images/editnote.png" /></a>
                            </td>
                            <td class="td-edit">
                                <a asp-controller="Transaction" asp-action="Delete" asp-route-Id=@item.Id><img src="/images/delete.png" /></a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Счет</th>
                        <th>Категория</th>
                        <th>Стоимость</th>
                        <th>Описание</th>
                        <th>Дата</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
