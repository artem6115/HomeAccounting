@using BusinessLayer.Services;
@using DataLayer.Entities;
@using DataLayer;
@model Filter
@{
    const int CounEntitytOnPage = 20;
    ViewData["Title"] = "Транзакции";
    List<Account> Accounts = AccountService.GetAll().Result;
    List<Category> Categories = CategoryService.GetAll().Result;
    var queryExecuted = TransactionService.GetAllPartial(Model.PageNumber, CounEntitytOnPage).Result;
    List<Transaction> Transactions = queryExecuted.Item2;
    int PageCount = queryExecuted.Item1;
    string? message = TempData["Message"]?.ToString();
    string? messageStyle = TempData["MessageStyle"]?.ToString()!;


}
@inject AccountService AccountService
@inject CategoryService CategoryService
@inject TransactionService TransactionService



<script>
    function MoveToolBar (){
        document.getElementById("ToolBar").classList.toggle("ActiveBar");
    }

    function deleteCommand(id) {
        var url = "delete/" + id;
        if (confirm("Вы уверены, что хотите удалить транзакцию?")) {
            window.location.replace(url);
        }
    }
</script>

<div class="ToolBar" id="ToolBar">  
    <div class="row">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="col-12">
                <form method="get">
                    <div class="row justify-content-center mt-1">
                        <div class="col-2">
                            <input class="form-control" hidden="hidden" />
                            <select class="form-select">
                                <option class="active" value="">Все счета</option>
                                @foreach (Account item in Accounts)
                                {
                                    <option value=@item.Id>@item.Name</option>
                                }
                                
                            </select>
                        </div>
                        <div class="col-2">


                            <div class="input-group">
                               
                                <span class="input-group-text">₽</span>

                                <input asp-for=Value class="form-control"  placeholder="Стоимость"/>

                            </div>
                         </div>
                        <div class="col-2"><input class="form-control" type="date" placeholder="Дата" /></div>
                        <div class="col-1 mt-1"><a href=""><img src="/images/filtr.png" /></a></div>
                        <div class="col-2 ">
                            <input class="form-control" placeholder="Что искать..." />

                        </div>
                        <div class="col-1 mt-1 ">
                            <a href=""><img src="/images/find.png" /></a>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-2">
                            <select  class="form-select">
                                <option class="active" value="">Все категории</option>

                                @foreach (Category item in Categories)
                                {
                                    <option value=@item.Id>@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <select class="form-select" asp-for=TypeTransaction>
                                <option value="0">Доходы/расходы</option>
                                <option value="1">Доходы</option>
                                <option value="-1">Расходы</option>
                            </select>
                        </div>
                        <div class="col-2">
                            <select class="form-select" asp-for=StringToFind>
                                <option value="">Без сортировки</option>
                                <option value="date">Сортировка по дате</option>
                                <option value="value">Сортировка по стоимости</option>
                                <option value="category">Сортировка по категории</option>
                                <option value="account">Сортировка по счету</option>
                            </select>
                        </div>
                        <div class="col-1"></div>

                        <div class="col-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <h5 style="color:white;" class="input-grop-text">В порядке возростания </h5>
                                </div>
                                <input type="checkbox" asp-for=IsForward class="form-check-input m-lg-2 mt-2" />
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </nav>
    </div>
    <div class="menuButton">
       <button class="btn" onclick="MoveToolBar()">
           <img asp-append-version=true src="/images/filtrMune.png" width="50px" height="50px"/>
       </button>
    </div>
</div>

@if (message is not null && message != "")
{
    <div class="alert @messageStyle mt-3 mb-3 text-center" style="z-index:0;">@message</div>
}

<div style="position:absolute;right:2%;margin-top:50px;width:50px;height:50px">
    <a asp-controller="Transaction" asp-action="EditPage"><img  width="50px" height="50px" src="/images/addTransaction.png" /></a>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <table id="table" class=" table table-striped table-bordered  table-hover" width="100%">
                <thead>
                    <tr>
                        <th>
                            <p>Счет</p>
                        </th>

                        <th>
                            <p> Категория</p>
                        </th>
                        <th>
                            <p> Стоимость</p>
                        </th>
                        <th><p> Описание</p></th>
                        <th>
                            <p> Дата</p>
                        </th>
                        <th colspan="2">
                            Редактирование
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(Transaction item in Transactions??new List<Transaction>(0)){
                        <tr>
                            <td>@item.Account.Name</td>
                            <td>@item.Category?.Name</td>
                            <td style="color:@(item.IsIncome?"green":"red")">@item.Value</td>
                            <td>@item.Comment</td>
                            <td>@item.Date.ToShortDateString()</td>
                            <td class="td-edit">
                                <a class="btn" asp-controller="Transaction" asp-action="EditPage" asp-route-Id=@item.Id><img src="/images/editnote.png" /></a>
                            </td>
                            <td class="td-edit">
                                <button class="btn" onclick="deleteCommand(@item.Id)"><img src="/images/delete.png" /></button>
                            </td>
                        </tr>
                    }
                </tbody>
                @if (Transactions is not null && Transactions.Count > 20)
                {
                    <tfoot>
                        <tr>
                            <th>Счет</th>
                            <th>Категория</th>
                            <th>Стоимость</th>
                            <th>Описание</th>
                            <th>Дата</th>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>
@if (PageCount >1)
{
    <div class="row justify-content-center mb-4">
        <div class="col-6 text-center">
            @if (Model.PageNumber != 0)
            {
                <a class="btn btn-secondary" asp-controller="Transaction" asp-action="Get" asp-route-page="0">Первая страница</a>
                <a asp-controller="Transaction" asp-action="Get" asp-route-page=@(Model.PageNumber-1)><img src="/images/back.png" /></a>
            }
            <span>@(Model.PageNumber+1)</span>
            @if(Model.PageNumber != PageCount - 1)
            {
                <a asp-controller="Transaction"  asp-action="Get" asp-route-page=@(Model.PageNumber+1)><img src="/images/next.png" /></a>
                <a class="btn btn-secondary" asp-controller="Transaction" asp-action="Get" asp-route-page=@(PageCount-1)> Последняя страница - @PageCount</a>
            }

                

        </div>
    </div>
}
