@using PresentationLayer.Models;
@using BusinessLayer.Services;
@using DataLayer.Entities;
@model CategoryEditModel
@inject CategoryService service
@{
    ViewData["Title"] = "Категории";
    List<Category> categories =await service.GetAll();
}
<form method="post" asp-controller="Category" asp-action="Add">
    <div class="row">
        <div class="col-10">
            <input asp-for=Name class="form-control" />
            <span asp-validation-for=Name></span>
        </div>
        <div class="col-2">
            <button class="btn btn-success" type="submit">Добавить</button>
        </div>
    </div>
</form>
<div class="row justify-content-center">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                   Наименование
                </th>

                <th>
                    Удаление
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in categories){
                <tr>
                    <td>@item.Name</td>
                    <td width="50px">
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id=@item.Id>
                            <img src="/images/delete.png" width="50px;" />
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>