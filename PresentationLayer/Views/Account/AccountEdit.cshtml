@{
    ViewData["Title"] = "Создание/изменение счёта";
}
@using PresentationLayer.Models;
@model AccountEditModel;

<div class="container">
    <form method="post" asp-controller="Account" asp-action="Edit">
        <div class="row  justify-content-center mt-5">
            <div class="col-lg-3 col-md-4 col-sm-12 mb-4">

                <div class="row justify-content-center">
                    <div class="col-5">
                        <img src="/images/account.png" width="100px" height="100px" class="mb-4" />
                    </div>
                </div>
                <input asp-for=Id hidden="hidden" />

                <label class="form-label">Название счета:</label>
                <input asp-for=Name value=@Model?.Name class="form-control" />
                <span asp-validation-for=Name class="validationError"></span>
                @if (Model is null)
                {
                    <label class="form-label mt-1">Начальная сумма:</label>
                    <input asp-for=StartValue value="0" class="form-control" />
                    <span asp-validation-for=StartValue class="validationError"></span>
                }
                <div class="row justify-content-center mt-4 ">
                    <div class="col-9 ">
                        <button type="submit" class="btn btn-success">Сохранить</button>
                        <a asp-controller="Account" asp-action="Get" class="btn btn-secondary">Отменить</a>
                    </div>
                </div>
            </div>
    </form>

</div>
