@model InventoryViewModel
@{
    ViewData["Title"] = "Инвентаризация";
    string? message = TempData["Message"]?.ToString();
    string messageStyle = TempData["MessageStyle"]?.ToString()!;
}
@if (message is not null && message != "")
{
    <div class="alert @messageStyle mt-3 mb-3 text-center">@message</div>
}

<form method="post" asp-controller="Inventory" asp-action="Add">
    <div class="row justify-content-center mt-3">
        <div class="col-lg-5 col-7">
            <input name="Date" type="date" class="form-control" />
            <input name="AccountId" hidden="hidden" class="form-control" value="@Model.AccountId" />
        </div>
        <div class="col-2">
            <button class="btn btn-success" type="submit">Добавить</button>
        </div>
    </div>
</form>

<div class="row justify-content-center mt-3">
    <div class="col-lg-7 col-10">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Дата
                    </th>
                    <th>
                        Баланс
                    </th>
                    <th width="50px">
                        Удаление
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Inventories??new List<Inventory>(0))
                {
                    <tr>
                        <td>@item.Date</td>
                        <td style="color:@((item.Value>=0)?"green":"red");">@item.Value</td>

                        <td width="50px">
                            <a asp-controller="Inventory" asp-action="Delete"asp-route-accountId=@item.AccountId asp-route-Id=@item.Id>
                                <img src="/images/delete.png" width="50px;" />
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
